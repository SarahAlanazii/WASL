@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - Wasl Logistics Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/custom.css">
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="auth-container">
                    <div class="row g-0">
                        <!-- Left Side (Image + Info) -->
                        <div class="col-lg-6 d-none d-lg-block">
                            <div class="auth-image">
                                <div>
                                    <a asp-controller="Home" asp-action="Index" class="text-center d-block">
                                        <img class="logoLogin" src="~/images/logo.png" alt="Wasl Logo">
                                    </a>
                                    <h2>Reset Your Password</h2>
                                    <p>We'll send you a link to reset your password and get back to managing your shipments</p>
                                    <ul class="feature-list mt-4">
                                        <li><i class="bi bi-check-lg"></i><span>Secure password recovery</span></li>
                                        <li><i class="bi bi-check-lg"></i><span>Access your account safely</span></li>
                                        <li><i class="bi bi-check-lg"></i><span>Get support when you need it</span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Right Side (Form) -->
                        <div class="col-lg-6">
                            <div class="auth-form">
                                <div class="text-center mb-4 d-lg-none">
                                    <a asp-controller="Home" asp-action="Index" class="logo text-primary">Wasl</a>
                                    <h3 class="mt-2">Forgot Password</h3>
                                </div>

                                <h4 class="mb-4">Forgot your password?</h4>
                                <p class="text-muted mb-4">Enter your registered email address, and we'll send you a reset link.</p>

                                @if (TempData["status"] != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        @TempData["status"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                }

                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        @TempData["ErrorMessage"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                }

                                <form method="post" asp-controller="Auth" asp-action="ForgotPassword">
                                    @Html.AntiForgeryToken()

                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email Address</label>
                                        <div class="input-icon">
                                            <i class="bi bi-envelope"></i>
                                            <input type="email" class="form-control"
                                                   id="email" name="email"
                                                   placeholder="Enter your registered email" required>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-primary w-100 mb-3">Send Reset Link</button>
                                </form>

                                <div class="auth-switch">
                                    Remember your password? <a asp-controller="Auth" asp-action="Login">Sign in</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>