@model List<Wasl.Models.Shipment>
@{
    ViewData["Title"] = "My Shipments - Wasl Logistics";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-3 mb-4">
            @* @await Component.InvokeAsync("ProviderSidebar") *@
            <partial name="_ProviderSidebar" />
        </div>

        <div class="col-lg-9">
            <div class="card mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-1">My Shipments</h4>
                    <p class="text-muted mb-0">Manage and track your active shipments</p>
                </div>
            </div>

            <div class="row">
                @if (Model.Any())
                {
                    @foreach (var shipment in Model)
                    {
                        var statusColor = shipment.CurrentStatus switch
                        {
                            "Received" => "primary",
                            "InTransit" => "warning",
                            "Delivered" => "success",
                            _ => "secondary"
                        };
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card shipment-card h-100">
                                <div class="card-header">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="mb-0">@shipment.Contract?.Bid?.ShipmentRequest?.GoodsType</h6>
                                        <span class="badge bg-@statusColor">@shipment.CurrentStatus</span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="info-item">
                                        <i class="bi bi-upc-scan text-primary"></i>
                                        <div>
                                            <small class="text-muted">Tracking</small>
                                            <p class="mb-0 fw-bold">@shipment.TrackingNumber</p>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <i class="bi bi-building text-success"></i>
                                        <div>
                                            <small class="text-muted">Company</small>
                                            <p class="mb-0">@shipment.Contract?.Company?.CompanyName</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a asp-action="Show" asp-route-id="@shipment.ShipmentId" class="btn btn-outline-primary btn-sm w-100">
                                        <i class="bi bi-eye me-1"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body text-center py-5">
                                <i class="bi bi-truck display-4 text-muted d-block mb-3"></i>
                                <h5>No Shipments Found</h5>
                                <a asp-controller="ProviderContract" asp-action="Index" class="btn btn-primary mt-3">
                                    View Contracts
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .shipment-card {
            transition: transform 0.2s;
        }

            .shipment-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            }

        .info-item {
            display: flex;
            align-items: center;
            margin-bottom: 12px;
            padding-bottom: 12px;
            border-bottom: 1px solid #f8f9fa;
        }

            .info-item:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

            .info-item i {
                font-size: 1.2rem;
                margin-right: 12px;
                width: 24px;
            }
    </style>
}