@model Wasl.ViewModels.CompanyVMs.DirectRequestsViewModel
@{
    ViewData["Title"] = "Direct Requests - Wasl Logistics";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="mb-0">Direct Requests</h4>
                <div class="page-title-right">
                    <span class="badge bg-warning">@Model.DirectRequests.Count pending</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" asp-action="DirectRequests">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">Filter by Provider</label>
                        <select class="form-select" name="provider_id">
                            <option value="">All Providers</option>
                            @foreach (var provider in Model.Providers)
                            {
                                <option value="@provider.ProviderId"
                                        selected="@(Context.Request.Query["provider_id"] == provider.ProviderId.ToString() ? "selected" : "")">
                                    @provider.ProviderName
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Filter by Status</label>
                        <select class="form-select" name="status">
                            <option value="">All Statuses</option>
                            <option value="UnderReview" selected=" @(Context.Request.Query["status"] == "UnderReview" ? "selected" : "")">Waiting Response</option>
                            <option value="Responded" selected="@(Context.Request.Query["status"] == "Responded" ? "selected" : "")">Provider Responded</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-funnel"></i> Filter
                        </button>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="DirectRequests" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-arrow-clockwise"></i> Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Direct Requests Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.DirectRequests.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-light">
                                    <tr>
                                        <th>Request ID</th>
                                        <th>Provider</th>
                                        <th>Shipment Details</th>
                                        <th>Provider's Offer</th>
                                        <th>Sent Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.DirectRequests)
                                    {
                                        <tr>
                                            <td><strong>#@request.BidId</strong></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="flex-shrink-0">
                                                        <div class="avatar-sm bg-light-primary rounded-circle d-flex align-items-center justify-content-center">
                                                            <i class="bi bi-truck font-14 text-primary"></i>
                                                        </div>
                                                    </div>
                                                    <div class="flex-grow-1 ms-3">
                                                        <h6 class="mb-0">@request.Provider?.ProviderName</h6>
                                                        <small class="text-muted">
                                                            <i class="bi bi-geo-alt"></i> @request.Provider?.ProviderCity
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@request.ShipmentRequest?.GoodsType</strong><br>
                                                    <small class="text-muted">
                                                        <strong>Route:</strong> @request.ShipmentRequest?.PickupCity → @request.ShipmentRequest?.DeliveryCity
                                                    </small><br>
                                                    <small class="text-muted">
                                                        <strong>Weight:</strong> @request.ShipmentRequest?.WeightKg kg
                                                    </small><br>
                                                    <small class="text-muted">
                                                        <strong>Deadline:</strong> @request.ShipmentRequest?.DeliveryDeadline?.ToString("MMM dd, yyyy")
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                @if (request.BidPrice > 0)
                                                {
                                                    <div class="offer-details">
                                                        <div class="text-success fw-bold mb-1">SAR @request.BidPrice?.ToString("N2")</div>
                                                        <div class="text-muted small mb-1">
                                                            <i class="bi bi-clock me-1"></i> @request.EstimatedDeliveryDays days
                                                        </div>
                                                        @if (!string.IsNullOrEmpty(request.BidNotes))
                                                        {
                                                            <div class="message-preview">
                                                                <small class="text-muted">
                                                                    @(request.BidNotes.Length > 60 ? request.BidNotes.Substring(0, 60) + "..." : request.BidNotes)
                                                                </small>
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">Waiting for provider's offer...</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="text-center">
                                                    <div class="fw-semibold">@request.SubmitDate?.ToString("MMM dd, yyyy")</div>
                                                    <small class="text-muted">@request.SubmitDate?.ToString("hh:mm tt")</small>
                                                </div>
                                            </td>
                                            <td>
                                                @if (request.BidPrice > 0)
                                                {
                                                    <span class="badge bg-info">
                                                        <i class="bi bi-chat-dots me-1"></i> Offer Received
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="bi bi-clock me-1"></i> Waiting Response
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    @if (request.BidPrice > 0)
                                                    {
                                                        <button type="button" class="btn btn-outline-success"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#acceptModal@(request.BidId)"
                                                                title="Accept Offer">
                                                            <i class="bi bi-check-circle"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-outline-danger"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#rejectModal@(request.BidId)"
                                                                title="Reject Offer">
                                                            <i class="bi bi-x-circle"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <a asp-controller="CompanyProvider" asp-action="Show" 
                                                           asp-route-id="@request.ProviderId"
                                                           class="btn btn-outline-primary" title="View Provider Profile">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-outline-danger"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#cancelModal@(request.BidId)"
                                                                title="Cancel Request">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    }
                                                </div>

                                                <!-- Accept Modal -->
                                                <div class="modal fade" id="acceptModal@(request.BidId)" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Accept Provider's Offer</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <form method="POST" asp-action="AcceptRequest" asp-route-id="@request.BidId">
                                                                @Html.AntiForgeryToken()
                                                                <div class="modal-body">
                                                                    <div class="alert alert-success">
                                                                        <i class="bi bi-check-circle me-2"></i>
                                                                        You are about to accept this provider's offer.
                                                                    </div>
                                                                    <div class="offer-summary p-3 bg-light rounded mb-3">
                                                                        <h6>Offer Details:</h6>
                                                                        <div class="row">
                                                                            <div class="col-6">
                                                                                <strong>Provider:</strong><br>@request.Provider?.ProviderName
                                                                            </div>
                                                                            <div class="col-6">
                                                                                <strong>Price:</strong><br>
                                                                                <span class="text-success fw-bold">SAR @request.BidPrice?.ToString("N2")</span>
                                                                            </div>
                                                                        </div>
                                                                        <div class="row mt-2">
                                                                            <div class="col-6">
                                                                                <strong>Delivery Time:</strong><br>@request.EstimatedDeliveryDays days
                                                                            </div>
                                                                            <div class="col-6">
                                                                                <strong>Shipment:</strong><br>@request.ShipmentRequest?.GoodsType
                                                                            </div>
                                                                        </div>
                                                                        @if (!string.IsNullOrEmpty(request.BidNotes))
                                                                        {
                                                                            <div class="row mt-2">
                                                                                <div class="col-12">
                                                                                    <strong>Provider's Notes:</strong><br>
                                                                                    <small class="text-muted">@request.BidNotes</small>
                                                                                </div>
                                                                            </div>
                                                                        }
                                                                    </div>
                                                                    <div class="form-check mb-3">
                                                                        <input class="form-check-input" type="checkbox" id="confirmAccept@(request.BidId)" required>
                                                                        <label class="form-check-label" for="confirmAccept@(request.BidId)">
                                                                            I confirm that I want to accept this offer and proceed with contract creation
                                                                        </label>
                                                                    </div>
                                                                    <div class="alert alert-info">
                                                                        <i class="bi bi-info-circle me-2"></i>
                                                                        A contract will be created automatically upon acceptance.
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-success">
                                                                        <i class="bi bi-check-circle me-2"></i>Accept Offer
                                                                    </button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Reject Modal -->
                                                <div class="modal fade" id="rejectModal@(request.BidId)" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Reject Provider's Offer</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <form method="POST" asp-action="RejectRequest" asp-route-id="@request.BidId">
                                                                @Html.AntiForgeryToken()
                                                                <div class="modal-body">
                                                                    <div class="alert alert-warning">
                                                                        <i class="bi bi-exclamation-triangle me-2"></i>
                                                                        You are about to reject this provider's offer.
                                                                    </div>
                                                                    <div class="mb-3">
                                                                        <label class="form-label">Reason for Rejection (Optional)</label>
                                                                        <textarea class="form-control" name="rejection_reason" rows="3"
                                                                                  placeholder="Please provide a reason for rejecting this offer..."></textarea>
                                                                    </div>
                                                                    <div class="form-check">
                                                                        <input class="form-check-input" type="checkbox" id="confirmReject@(request.BidId)" required>
                                                                        <label class="form-check-label" for="confirmReject@(request.BidId)">
                                                                            I confirm that I want to reject this offer
                                                                        </label>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-danger">
                                                                        <i class="bi bi-x-circle me-2"></i>Reject Offer
                                                                    </button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Cancel Request Modal -->
                                                <div class="modal fade" id="cancelModal@(request.BidId)" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Cancel Direct Request</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <form method="POST" asp-action="DeleteRequest" asp-route-id="@request.BidId">
                                                                @Html.AntiForgeryToken()
                                                                <div class="modal-body">
                                                                    <div class="alert alert-warning">
                                                                        <i class="bi bi-exclamation-triangle me-2"></i>
                                                                        You are about to cancel this direct request.
                                                                    </div>
                                                                    <div class="request-details p-3 bg-light rounded mb-3">
                                                                        <strong>Provider:</strong> @request.Provider?.ProviderName<br>
                                                                        <strong>Shipment:</strong> @request.ShipmentRequest?.GoodsType<br>
                                                                        <strong>Sent:</strong> @request.SubmitDate?.ToString("MMM dd, yyyy HH:mm")
                                                                    </div>
                                                                    <div class="form-check">
                                                                        <input class="form-check-input" type="checkbox" id="confirmCancel@(request.BidId)" required>
                                                                        <label class="form-check-label" for="confirmCancel@(request.BidId)">
                                                                            I confirm that I want to cancel this direct request
                                                                        </label>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Request</button>
                                                                    <button type="submit" class="btn btn-danger">
                                                                        <i class="bi bi-trash me-2"></i>Cancel Request
                                                                    </button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state text-center py-5">
                            <div class="empty-state-icon mb-4">
                                <i class="bi bi-send display-4 text-muted"></i>
                            </div>
                            <h4>No Direct Requests Found</h4>
                            <p class="text-muted mb-4">
                                @if (Context.Request.Query.Count > 0)
                                {
                                    <text>No requests match your current filters. Try adjusting your search criteria.</text>
                                }
                                else
                                {
                                    <text>You haven't sent any direct requests to providers yet. Start by browsing approved providers and sending them your shipment requests.</text>
                                }
                            </p>
                            <div class="d-flex justify-content-center gap-3">
                                <a asp-action="Index" class="btn btn-primary">
                                    <i class="bi bi-search me-2"></i> Browse Providers
                                </a>
                                <a asp-controller="CompanyShipment" asp-action="Index" class="btn btn-outline-primary">
                                    <i class="bi bi-plus-circle me-2"></i> Create Shipment
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-sm {
            width: 40px;
            height: 40px;
        }

        .message-preview {
            max-width: 200px;
            word-wrap: break-word;
        }

        .offer-details {
            min-width: 150px;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.02);
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }

        .offer-summary {
            border-left: 4px solid #28a745;
        }

        .request-details {
            border-left: 4px solid #fd7e14;
        }
    </style>
}