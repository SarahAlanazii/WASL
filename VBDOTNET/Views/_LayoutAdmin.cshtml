<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Dashboard - Wasl</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/custom.css">
    <link rel="stylesheet" href="~/css/dash.css">
    <!-- Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white p-0 sticky-top shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Admin" asp-action="Dashboard">
                <img src="~/images/logo.png" alt="Wasl Logo" height="70">
            </a>
            <button class="navbar-toggler me-2" type="button" id="sidebarToggle">
                <span class="navbar-toggler-icon"></span>
            </button>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <span class="badge bg-danger noty">5</span>
                            <i style="font-size: 20px;" class="bi bi-bell"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-exclamation-triangle"></i> 3 New Reports</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person-plus"></i> 2 Pending Approvals</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-flag"></i> 1 Urgent Issue</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-bell"></i> View all notifications</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="ms-lg-3 mt-3 mt-lg-0">
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-shield-check"></i> @User.Identity.Name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person-circle"></i> Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="POST" asp-controller="Auth" asp-action="Logout" id="logoutForm">
                                    @Html.AntiForgeryToken()
                                    <a class="dropdown-item" href="#" onclick="event.preventDefault(); document.getElementById('logoutForm').submit();">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </a>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <i class="bi bi-shield-check"></i> <small>Admin Panel</small>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a asp-controller="Admin" asp-action="Dashboard"
                       class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Companies"
                       class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Companies" ? "active" : "")">
                        <i class="bi bi-people"></i> Manage Companies
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Providers"
                       class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Providers" ? "active" : "")">
                        <i class="bi bi-truck"></i> Manage Providers
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="ShipmentRequests"
                       class="@(ViewContext.RouteData.Values["action"]?.ToString() == "ShipmentRequests" ? "active" : "")">
                        <i class="bi bi-list-ul"></i> Shipment Requests
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Contracts"
                       class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Contracts" ? "active" : "")">
                        <i class="bi bi-file-earmark-text"></i> Contracts & Deals
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Feedback"
                       class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Feedback" ? "active" : "")">
                        <i class="bi bi-star"></i> Feedback & Reviews
                    </a>
                </li>
                <li>
                    <a asp-controller="Report" asp-action="Revenue"
                       class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Report" ? "active" : "")">
                        <i class="bi bi-cash-coin"></i> Revenue Reports
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        @RenderBody()
    </div>

    <!-- jQuery (required for Toastr) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>

    <script>
        // Sidebar functionality
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('active');
            document.getElementById('mainContent').classList.toggle('active');
        });

        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const toggleBtn = document.getElementById('sidebarToggle');
            if (window.innerWidth < 992) {
                if (!sidebar.contains(event.target) && !toggleBtn.contains(event.target)) {
                    sidebar.classList.remove('active');
                    document.getElementById('mainContent').classList.remove('active');
                }
            }
        });

        // Active menu item handling
        document.querySelectorAll('.sidebar-menu a').forEach(item => {
            item.addEventListener('click', function() {
                if (!this.getAttribute('data-bs-toggle')) {
                    document.querySelectorAll('.sidebar-menu a').forEach(link => {
                        link.classList.remove('active');
                    });
                    this.classList.add('active');
                }
                if (window.innerWidth < 992) {
                    document.getElementById('sidebar').classList.remove('active');
                    document.getElementById('mainContent').classList.remove('active');
                }
            });
        });

        // Toastr notifications
        @if (TempData["SuccessMessage"] != null)
        {
                <text>
                toastr.success("@TempData["SuccessMessage"]", "Success", {
                    closeButton: true,
                    progressBar: true,
                    timeOut: 3000
                });
                </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
                <text>
                toastr.error("@TempData["ErrorMessage"]", "Error", {
                    closeButton: true,
                    progressBar: true,
                    timeOut: 3000
                });
                </text>
        }

        $(document).ready(function () {
            $.fn.dataTable.ext.errMode = 'none';
            $('table').each(function() {
                try {
                    $(this).DataTable({
                        language: {
                            search: "🔍 Search:",
                            searchPlaceholder: "Type to filter..."
                        },
                    });
                } catch (e) {
                    console.warn("DataTable skipped for this table:", e.message);
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>